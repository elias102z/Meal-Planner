{% extends 'base.html.twig' %}

{% block title %}Meals index{% endblock %}

{% block body %}
    <h1>Meals index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Day</th>
                <th>Time</th>
                <th>Week_n</th>
                <th>Created_at</th>
                <th>Modified_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for meal in meals %}
            <tr>
                <td>{{ meal.id }}</td>
                <td>{{ meal.day }}</td>
                <td>{{ meal.time ? meal.time|date('H:i:s') : '' }}</td>
                <td>{{ meal.weekN }}</td>
                <td>{{ meal.createdAt ? meal.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ meal.modifiedAt ? meal.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_meals_show', {'id': meal.id}) }}">show</a>
                    <a href="{{ path('app_meals_edit', {'id': meal.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_meals_new') }}">Create new</a>
{% endblock %}
