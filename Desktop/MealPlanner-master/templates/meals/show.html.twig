{% extends 'base.html.twig' %}

{% block title %}Meals{% endblock %}

{% block body %}
    <h1>Meals</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ meal.id }}</td>
            </tr>
            <tr>
                <th>Day</th>
                <td>{{ meal.day }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ meal.time ? meal.time|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Week_n</th>
                <td>{{ meal.weekN }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ meal.createdAt ? meal.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modified_at</th>
                <td>{{ meal.modifiedAt ? meal.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_meals_index') }}">back to list</a>

    <a href="{{ path('app_meals_edit', {'id': meal.id}) }}">edit</a>

    {{ include('meals/_delete_form.html.twig') }}
{% endblock %}
